# --------------------------------------------------------------------------
# Application Environment
# --------------------------------------------------------------------------
# Options: development, staging, production
FABRIC_APP_ENV=production

# --------------------------------------------------------------------------
# Logging Configuration
# --------------------------------------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
FABRIC_APP_LOG_LEVEL=INFO

# --------------------------------------------------------------------------
# File Upload Limits
# --------------------------------------------------------------------------
FABRIC_APP_MAX_FILE_SIZE_MB=10
FABRIC_APP_MAX_BATCH_ROWS=1000

# --------------------------------------------------------------------------
# Model Configuration
# --------------------------------------------------------------------------
FABRIC_APP_MODEL_PATH=models

# --------------------------------------------------------------------------
# Session Management
# --------------------------------------------------------------------------
FABRIC_APP_SESSION_TIMEOUT_MINUTES=120

# --------------------------------------------------------------------------
# Analytics & Monitoring
# --------------------------------------------------------------------------
FABRIC_APP_ENABLE_ANALYTICS=false

# --------------------------------------------------------------------------
# Streamlit Configuration (optional)
# --------------------------------------------------------------------------
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
# STREAMLIT_SERVER_HEADLESS=true
# STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
